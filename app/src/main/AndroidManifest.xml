        android:theme="@style/AppTheme">
        <activity android:name=".Authentication.ForgotPassword"></activity>
        <activity android:name=".Authentication.ChangePassword" />
        <activity android:name=".Categories.Break" />
        <activity android:name=".Categories.Chinese" />
        <activity android:name=".Categories.Korean" />
        <activity android:name=".Categories.Combo" />
        <activity android:name=".ProfileNav" />
        <activity android:name=".NavBar_Food" />
        <activity android:name=".Authentication.LoginActivity" />
        <activity android:name=".Authentication.register_Activity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".splashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>